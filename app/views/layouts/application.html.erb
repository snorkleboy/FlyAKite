<!DOCTYPE html>
<html>
  <head>
    <title>FlyAKite</title>
    <%= csrf_meta_tags %>'
    <script src="https://use.fontawesome.com/5b61570599.js"></script>
    <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=AIzaSyBtx5KlexIEYN2Jk6GFFpe8fqOHJm_XM6M" %>
    <%= stylesheet_link_tag    'application', media: 'all' %>



<script type="text/javascript">
  <% if current_user() %>
    window.bootStrap = <%= render(
      "api/users/strapper.json.jbuilder",
      user: current_user
    ).html_safe %>
    <% else %>
    window.bootStrap = {};
    window.bootStrap.currentUser = null;
    window.bootStrap.registrations = [];
    window.bootStrap.bookmarks = [];
  <% end %>
</script>

<script src='https://widget.cloudinary.com/global/all.js' type="text/javascript"></script>
<script type="text/javascript">
  window.Cloudinary_options = {
    cloud_name: '<%= ENV['CLOUD_NAME'] %>',
    upload_preset: '<%= ENV['UPLOAD_PRESET'] %>'
  }
</script>

  </head>

  <body>
      <%= javascript_include_tag 'application' %>
    <%= yield %>

  </body>
</html>
